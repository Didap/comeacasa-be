{
    "kind": "collectionType",
    "collectionName": "stanze",
    "info": {
        "singularName": "stanza",
        "pluralName": "stanze",
        "displayName": "Stanza",
        "description": "Appartamenti e Stanze"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "nome": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "nome",
            "required": true
        },
        "posizione": {
            "type": "component",
            "repeatable": false,
            "component": "shared.indirizzo",
            "required": true
        },
        "numero_stanze": {
            "type": "integer"
        },
        "tipologia_letti": {
            "type": "string"
        },
        "prezzo": {
            "type": "decimal"
        },
        "descrizione": {
            "type": "richtext"
        },
        "disponibilita": {
            "type": "boolean",
            "default": true
        },
        "galleria": {
            "type": "media",
            "multiple": true,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "user": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "plugin::users-permissions.user",
            "inversedBy": "stanze"
        },
        "specifiche": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::specifica.specifica",
            "inversedBy": "stanze"
        }
    }
}